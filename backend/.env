# Puerto del servidor Express
PORT=${PORT:-3000}

# Configuración de la base de datos MySQL
DB_HOST=${DB_HOST:-localhost}
DB_PORT=${DB_PORT:-3306}
DB_USER=${DB_USER:-root}
DB_PASSWORD=${DB_PASSWORD:-mysql}  # Contraseña por defecto si no se define
DB_NAME=${DB_NAME:-tienda_db}

# JWT - Access Token
JWT_SECRET=${JWT_SECRET:-"clave_super_segura_para_tianguistore"}
JWT_EXPIRES_IN=${JWT_EXPIRES_IN:-"1d"}

# JWT - Refresh Token
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET:-"clave_aun_mas_segura_para_refresh_tianguistore"}
JWT_REFRESH_EXPIRES_IN=${JWT_REFRESH_EXPIRES_IN:-"7d"}

# Frontend URL (usado en la recuperación de contraseña)
FRONTEND_URL=${FRONTEND_URL:-"https://tianguistore.mx"}

# Correo para enviar mensajes (Si usas un servicio SMTP, define aquí las credenciales)
EMAIL_USER=${EMAIL_USER:-"your-email@example.com"}
EMAIL_PASS=${EMAIL_PASS:-"your-email-password"}  # Usar un "App Password" o servicio de correo seguro
