  "author": "I.S.C. Erick Renato Vega Ceron",
  "license": "UNLICENSED-COMMERCIAL-DUAL",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.1",
    "validator": "^13.15.0",
    "tailwindcss": "^4.1.5",
    "postcss": "^8.5.3",
